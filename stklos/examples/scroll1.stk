(include "gtklos-demo.stk")

(define demo-msg "
Scroll Demo

This is a demo showing a scrollable window containing
a bunch of buttons.
Try to resize the window to see the scrollbars disappear
")


(define (main args)
  (let* ((win    (make <demo-window> :title "Scroll Demo" 
		       :file "scroll1" :border-width 5 :message demo-msg
		       :width 500 :height 400
		       :expand #t :fill #t))
	 (scroll (make <scroll> :parent win
		       :hpolicy 'automatic
		       :vpolicy 'automatic))
	 (grid   (make <grid> :parent scroll
		       :columns 6 :row-spacing 5 :column-spacing 5)))
    ;; Build a set of  buttons in the grid contained in <scroll>
    (dotimes (i 120)
      (make <button> :text (format "Button #~A" i) :parent grid
	    :command (lambda (e)
		       (eprintf "You have clicked on button #~A\n" i))))
    (gtk-main)))
