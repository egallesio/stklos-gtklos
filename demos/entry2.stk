(include "gtklos-demo.stk")

(define (main args)
  (let* ((window (make <demo-window>
		       :title "STklos Entry and Events"
		       :border-width 15
		       :file "entry2"
		       :message "
Entry and Events

This is a demonstration of the entry widget. In this demo,
an event handler is associated to the widget. This event handler
manages the \"Enter\" and \"Control-q\" keys. The former prints
a message and the second exits the demonstration.
"))
	 (entry  (make <entry> :value "This is an entry" :parent window)))
    ;; Connect event management
    (event-connect entry "key-press-event"
		   (lambda (e)
		     (let ((ch (event-char e)))
		       (cond
			 ((char=? ch #\newline)
			  (printf "entry value: ~S\n" (value entry)))
			 ((char=? ch #\q)
			  (when (member 'control (event-modifiers e))
			    (printf "Quit\n")
			    (exit 0)))))
		     ;; Propagate event to widget
		     #f)))
  (gtk-main))
